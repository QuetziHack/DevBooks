---
import Layout from '../layouts/Layout.astro';
import BookCard from '../components/BookCard.astro';
import { getCollection } from 'astro:content';

const books = await getCollection('books');
---

<Layout title="Dev🧑‍💻Books" description="Una colección de libros para desarrolladores">
  <main class="px-4 text-center">
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold mb-6 md:mb-12 leading-tight">
      Dev👨‍💻 <span class="block">Books</span>
    </h1>
    <p class="text-lg sm:text-xl md:text-2xl text-gray-600">
      Una colección de libros para desarrolladores
    </p>
  </main>
  
  <section aria-label="Libros para desarrolladores" class="py-10">
    <div class="px-4 mx-auto max-w-7xl">
      <div class="grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8">
        {books.map(book => (
          <BookCard 
            slug={book.slug}
            title={book.data.title}
            img={book.data.img}
            readtime={book.data.readtime}
            description={book.data.description}
          />
        ))}
      </div>
    </div>
  </section>
</Layout>
